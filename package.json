{
  "name": "app-ia",
  "version": "1.0.0",
  "type": "module",
  "description": "Aplicación recetas IA",
  "main": "server.js",
  "scripts": {
    "start": "node --no-deprecation build/server.js",
    "dev": "ts-node src/server.ts",
    "build": "npm run clean && tsc && npm run copy-static",
    "clean": "if exist build rmdir /s /q build",
    "copy-static": "if not exist build\\public mkdir build\\public && xcopy /E /I /Y src\\*.html build\\public\\ && xcopy /E /I /Y src\\*.css build\\public\\ && move build\\index.js build\\public\\ && move build\\server.js build\\"
  },
  "keywords": [
    "Aplicación",
    "IA",
    "Cocina"
  ],
  "author": "Miguel Á. Cabezas",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.12",
    "@types/node-fetch": "^2.6.11",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "node-fetch": "^2.6.1"
  },
  "resolutions": {
    "punycode": "^2.1.1"
  }
}
